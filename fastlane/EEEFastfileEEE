default_platform(:ios)

platform :ios do
  desc "login"
  app_store_connect_api_key(
    key_id: "XFQ94S4AWH",
    issuer_id: "c481f9bd-73fa-46d4-a81e-55ae31ef6a1c",
    key_filepath: "./fastlane/AuthKey_XFQ94S4AWH.p8",
    in_house: false
  )
 
  desc "Build and upload to TestFlight"
  lane :beta do
    build_app(
      scheme: "githubActionsTest",
      export_method: "app-store",
      export_options: {
        signingStyle: "automatic"
      },
      export_xcargs: "-allowProvisioningUpdates"
    )

    upload_to_testflight
  end
  desc "Run Tests"
  lane :test do
    scan(
      scheme: "githubActionsTest",
      export_method: "development",
    )
  end
  desc "Firebase App Distribution"
  lane :firebase_deploy do
  # Build the app
    gym(
      scheme: "githubActionsTest",
      export_method: "ad-hoc",  # or "development" if you want
      export_options: {
        signingStyle: "automatic"
      },
      export_xcargs: "-allowProvisioningUpdates"
    )

  # Upload to Firebase App Distribution
    firebase_app_distribution(
      app: "1:568408854315:ios:f5ea06f3e0b00ca98c3f6e",   # Your Firebase App ID (find in Firebase console)
      ipa_path: "./githubActionsTest.ipa",               # Path to your .ipa file generated by gym
      groups: "testers",                  # optional groups defined in Firebase
      release_notes: "Automated build from Fastlane"
    )
  end
end
